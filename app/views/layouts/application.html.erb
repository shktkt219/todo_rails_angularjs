<!DOCTYPE html>
<html ng-app="todoApp">
<head>
  <base href="/">
  <title>TodoRailsAngularjs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-default">
    <div class="navbar-header">
      <a class="navbar-brand" ui-sref="home">Home</a>
      <% if user_signed_in? %>
        <a class="navbar-brand" ui-sref="#">Profile</a>
        <a class="navbar-brand" ui-sref="home.dashboard">Dashboard</a>
        <a class="navbar-brand" ui-sref="#">Log Out</a>
      <% else %>
        <a class="navbar-brand" ui-sref="#">Log In</a>
      <% end %>
    </div>
  </header>

  <%= yield %>

</body>
</html>
