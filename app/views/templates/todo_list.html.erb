<div class="container" ng-controller="TodoListCtrl" ng-init="init()">
  <br>
  <h1>Todo List</h1>
  <br>
  <div class="panel panel-info">

    <div class="panel-heading">
      <h4>{{list.name}}</h4>
    </div>

    <form id="new_todo" ng-submit="addTodo(todoDescription)">
      <div class="input-group">
        <input type="text"
               id="todoDescription"
               class="form-control input-lg"
               autofocus="autofocus"
               maxlength="255"
               placeholder="New Task"
               ng-model="todoDescription">
        <button class="btn btn-primary btn-lg" type="submit">Add</button>
      </div>
    </form>

    <ul class="list-group">
      <li class="list-group-item"
          ng-repeat="todo in list.todos"
          ng-class="{ done: todo.done }">
        <div class="todo-done">
          <input type="checkbox"
                 ng-model="todo.done"
                 ng-click="toggleTodo(todo)">
        </div>
        <div class="todo-description">
          <span class="done-{{todo.done}}">{{todo.description}}</span>
        </div>
        <div class="todo-buttons pull-right">
          <button class="btn btn-danger btn-xs pull-right"
                  type="button"
                  ng-click="deleteTodo(todo)">
            <span>Delete</span>
          </button>
        </div>
      </li>
    </ul>
  </div>
</div>
